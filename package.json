{
  "name": "mycv",
  "version": "1.0.0",
  "description": "My CV",
  "main": "index.js",
  "scripts": {
    "postinstall": "pip install -r requirements.txt",
    "build": ". .venv/bin/activate && rendercv render \"Sepehr_Laal_CV.yaml\"",
    "backend": "cd resume-matcher/apps/backend && . ../../../.venv/bin/activate && uvicorn app.main:app --reload",
    "frontend": "cd resume-matcher/apps/frontend && npm run dev",
    "start": "npm-run-all --parallel backend frontend",
    "stop": "lsof -ti:8000 | xargs -r kill -9 && lsof -ti:3000 | xargs -r kill -9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3p3r/mycv.git"
  },
  "keywords": [],
  "author": "Sepehr Laal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3p3r/mycv/issues"
  },
  "homepage": "https://github.com/3p3r/mycv#readme",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
